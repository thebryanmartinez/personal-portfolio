---

<footer class="keyboard-manager">
  <p id="keyboard-manager-text">
    Press <kbd>Cmd</kbd> + <kbd>K</kbd> to open command palette.
  </p>
</footer>

<ninja-keys data-info={JSON.stringify(linksInformation)}></ninja-keys>

<script>
  import "ninja-keys";

  let OSName: string;
  if (navigator.userAgent.indexOf("Mac") != -1) OSName = "MacOS";

  const footerText = document.getElementById("keyboard-manager-text");
  if (footerText != null) {
    let text = footerText.innerHTML;
    if (OSName == "MacOS") {
      text = text.replace("Cmd", "âŒ˜");
    } else {
      text = text.replace("Cmd", "Ctrl");
    }
    footerText.innerHTML = text;
  }

  const ninja = document.querySelector("ninja-keys");

  if (ninja != null) {
    const info = ninja.getAttribute("data-info") ?? "[]";
    const parsedInfo = JSON.parse(info);

    const data = parsedInfo.map((info) => {
      return {
        ...info,
        handler: () => {
          window.open(info.url, "_blank");
        },
      };
    });

    ninja.data = [...data];
  }
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .keyboard-manager {
    position: fixed;
    bottom: 0;
    left: 0;
    background: var(--background);
    border-top: 1px solid var(--background-hover);
    width: 100%;
    text-align: center;
    padding-block: 0.25rem;
    font-size: 0.85rem;

    view-timeline-name: --revealing;
    view-timeline-axis: block;

    animation: linear 0.3s fadeIn;
    animation-timeline: --revealing;
    animation-range: entry 100% cover 10%;
  }
</style>
