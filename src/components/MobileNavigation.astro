---
import { default as strings } from "@/locales/en.json";
import NavigationButton from "@/components/NavigationButton.astro";
---

<nav class="container">
  <ul class="links-container">
    <NavigationButton
      text={strings.header.navigation.about}
      icon="mdi:account-outline"
      url="#about"
    />
    <NavigationButton
      text={strings.header.navigation.experience}
      icon="mdi:briefcase-outline"
      url="#experience"
    />
    <NavigationButton
      text={strings.header.navigation.projects}
      icon="mdi:application-brackets-outline"
      url="#projects"
    />
    <NavigationButton
      text={strings.header.navigation.contact}
      icon="mdi:message-outline"
      url="#contact-me"
    />
  </ul>
</nav>

<style>
  .container {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    border: 1px solid var(--heading);
    background-color: var(--background);
  }

  .links-container {
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }

  .link {
    list-style: none;
  }

  @media (min-width: 601px) {
    .container {
      display: none;
    }
  }
</style>
