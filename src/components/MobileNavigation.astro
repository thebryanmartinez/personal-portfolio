---
import NavigationButton from "@/components/NavigationButton.astro";
---

<nav class="container">
  <ul class="links-container">
    <NavigationButton text="About" icon="mdi:account-outline" url="#about" />
    <NavigationButton text="Experience" icon="mdi:briefcase-outline" url="#experience" />
    <NavigationButton
      text="Projects"
      icon="mdi:application-brackets-outline"
      url="#"
    />
    <NavigationButton text="Contact" icon="mdi:message-outline" url="#" />
  </ul>
</nav>

<style>
  .container {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    border: 1px solid var(--heading);
  }

  .links-container {
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }

  .link {
    list-style: none;
  }

  @media (min-width: 480px) {
    .container {
      display: none;
    }
  }
</style>
