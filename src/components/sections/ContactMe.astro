<style>
  .contact-me {
    display: flex;
    align-items: start;
    justify-content: space-between;
    gap: 8rem;
    @media (max-width: 601px) {
      flex-direction: column;
      gap: 4rem;
    }
  }

  .contact-me--section {
    display: grid;
    place-items: center;
    flex: 1;
  }

  .contact-me--title {
    margin-bottom: 2rem;
  }

  .contact-me--buttons {
    margin: 2rem 0rem;
    display: flex;
    gap: 1rem;

    @media (max-width: 1100px) {
      flex-direction: column;
    }
  }

  .contact-me--skills {
    display: grid;
    width: 100%;
    margin-bottom: 2rem;
    grid-template-columns: repeat(4, 1fr);
    grid-auto-flow: row;

    @media (max-width: 768px) {
      grid-template-columns: repeat(3, 1fr);
    }

    @media (max-width: 450px) {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
